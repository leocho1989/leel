<!DOCTYPE html>
<html>
  <head>
    <title>leel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user%>
    <script>
    window.current_user = {
      "id": <%= current_user.id%>,
      "username": "<%= current_user.username%>",
      "email":"<%= current_user.email%>"
    };
    </script>
    <%end%>  

    <script>
      window.cameraURL = "<%= image_url('camera.png') %>";
    window.chatURL = "<%= image_url('chat.png') %>";
    window.headphonesURL = "<%= image_url('headphones.png') %>";
    window.httpURL = "<%= image_url('http.png') %>";
    window.textURL = "<%= image_url('text.png') %>";
    window.quotationURL = "<%= image_url('quotation.png') %>";
    window.videoURL = "<%= image_url('video.png') %>";
    window.avatarURL = "<%= image_url('avatar.png') %>";
    window.uploadURL = "<%= image_url('upload.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
